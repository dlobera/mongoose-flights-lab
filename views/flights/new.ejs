<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-select">Airline</label>
    <select type="text" name="airline" id="airline-select">
      <option value="American">American Airlines</option>
      <option value="Southwest">Southwest Airlines</option>
      <option value="United">United Airlines</option>
    </select>
    <label for="airport-select">Airport</label>
    <select name="airport" id="airport-select">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <default value="DEN">DEN</default>
    </select>
    <label for="flight-no-input">Flight Number</label>
    <input type="number" min= "10" max= "9999" name="flightNo" id="flight-no-input">
    <label for="date-input">Departs</label>
    <input type="datetime-local" name="date" id="date-input">
    <button type="submit" class="button">Submit</button> 
  </form>
</main>
<%- include("../partials/footer") %>

